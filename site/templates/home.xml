<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<!-- Page description -->
			<cms:module 
				name="page_info" 
				action="set_description" 
				article="about"
				/>
			<link href='https://fonts.googleapis.com/css?family=Alef:400,700' rel='stylesheet' type='text/css'/>
			<script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBNLUvJ---XR3OJrvw4OSoSUGMr9t-BDZI"></script>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<section id="features">
				<ul>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="features"
						template="parts/features_images.xml"
						/>
				</ul>

				<article>
					<cms:module
						name="articles"
						action="show"
						text_id="about"
						template="parts/article.xml"
						/>
				</article>

				<img 
					class="stamp" 
					src="_BASEURL.'/site/images/natural-stamp.svg'"  
					alt="stamp" 
					cms:eval="src"/>
			</section>

			<section id="video">
				<h2><cms:text constant="title_video"/></h2>

				<a href="javascript:void(0)" class="previous_video"></a>
				<div class="video_container">
					<cms:module
						name="youtube"
						action="show_list"
						group_text_id="videos"
						template="parts/video.xml"
						/>
				</div>
				<a href="javascript:void(0)" class="next_video"></a>

				<p><cms:text constant="title_recipe_show"/></p>
				<label>
					<input type="checkbox" id="recipe"/>
					<span><cms:text constant="button_recipe"/></span>
				</label>
			</section>

			<section id="recipes">
				<div class="recipe_wrapper">
					<a href="javascript:void(0)" class="previous_recipe"></a>
					<h2><cms:text constant="title_recipe"/></h2>
					<a href="javascript:void(0)" class="next_recipe"></a>

					<cms:module
						name="articles"
						action="show_list"
						group="recipes"
						template="parts/recipe_article.xml"
						/>
				</div>
			</section>

			<section id="grow">
				<cms:module
					name="articles"
					action="show"
					text_id="grow"
					template="parts/article.xml"
					/>
			</section>

			<section id="map"></section>

			<!-- Bottom part of the site -->
			<footer>
				<h2 id="testimonial"><cms:text constant="title_testimonial"/></h2>
				<div class="testimonial_container">
					<a href="javascript:void(0)" class="previous_testimonial"></a>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="testimonials"
						template="parts/testimonial_article.xml"
						/>
					<a href="javascript:void(0)" class="next_testimonial"></a>
				</div>
				

				<div id="form_wrap">
					<p><cms:text constant="title_form"/></p>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</div>
			</footer>
		</body>
	</html>
</document>