<document>
	<cms:desktop>
		<div class="video">
			<cms:module
				name="youtube"
				action="show"
				id="$params['id']"
				embed="1"
				width="650"
				height="432"
				enable_api="1"
				cms:eval="id"
				allowfullscreen="true"
			/>
		</div>
	</cms:desktop>

	<cms:mobile>
		<a
			class="youtube mobile"
			href="'http://www.youtube.com/watch?v='.$params['video_id']"
			title="$params['title'][$language]"
			cms:eval="href,title"
			>
			<img
				src="$params['thumbnail']"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
			/>
		</a>
	</cms:mobile>
</document>